{
  "name": "unified-engine-gulp",
  "version": "8.0.0",
  "description": "unified engine to create a Gulp plugin from a processor",
  "license": "MIT",
  "keywords": [
    "unified",
    "engine",
    "remark",
    "rehype",
    "retext",
    "gulp",
    "processor"
  ],
  "repository": "unifiedjs/unified-engine-gulp",
  "bugs": "https://github.com/unifiedjs/unified-engine-gulp/issues",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/unified"
  },
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "files": [
    "index.js"
  ],
  "dependencies": {
    "convert-vinyl-to-vfile": "^2.1.2",
    "plugin-error": "^1.0.1",
    "through2": "^3.0.0",
    "unified-engine": "^8.0.0",
    "vinyl": "^2.2.0"
  },
  "devDependencies": {
    "nyc": "^15.0.0",
    "prettier": "^2.0.0",
    "remark": "^12.0.0",
    "remark-cli": "^8.0.0",
    "remark-html": "^11.0.0",
    "remark-preset-wooorm": "^7.0.0",
    "remark-slug": "^6.0.0",
    "tape": "^4.0.0",
    "xo": "^0.29.0"
  },
  "scripts": {
    "format": "remark . -qfo && prettier --write \"**/*.js\" && xo --fix",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test",
    "test": "npm run format && npm run test-coverage"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "rules": {
      "unicorn/prefer-starts-ends-with": "off"
    }
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
