{
  "name": "unified-engine-gulp",
  "version": "6.0.0",
  "description": "Create Gulp plug-ins for unified processors",
  "license": "MIT",
  "keywords": [
    "gulp",
    "unified",
    "processor"
  ],
  "repository": "unifiedjs/unified-engine-gulp",
  "bugs": "https://github.com/unifiedjs/unified-engine-gulp/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)"
  ],
  "files": [
    "index.js"
  ],
  "dependencies": {
    "convert-vinyl-to-vfile": "^2.0.0",
    "plugin-error": "^1.0.1",
    "through2": "^2.0.1",
    "unified-engine": "^6.0.0",
    "vinyl": "^2.2.0",
    "xtend": "^4.0.1"
  },
  "devDependencies": {
    "nyc": "^11.0.0",
    "prettier": "^1.12.1",
    "remark": "^9.0.0",
    "remark-cli": "^5.0.0",
    "remark-html": "^7.0.0",
    "remark-preset-wooorm": "^4.0.0",
    "tape": "^4.6.0",
    "xo": "^0.21.0"
  },
  "scripts": {
    "format": "remark . -qfo && prettier --write '**/*.js' && xo --fix",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test",
    "test": "npm run format && npm run test-coverage"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "rules": {
      "guard-for-in": "off",
      "no-var": "off",
      "prefer-arrow-callback": "off",
      "unicorn/prefer-starts-ends-with": "off"
    }
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
